set number
set autoindent
set smartindent
set tabstop=4
set expandtab
set shiftwidth=4
set softtabstop=4

colorscheme rbog

set mouse=a

syntax on

nmap <F1> :set mouse=<CR>
nmap <F2> :set mouse=a<CR>
nmap <F3> :set hlsearch!<CR>

imap <F1> :set mouse=<CR>
imap <F2> :set mouse=a<CR>
imap <F3> :set hlsearch!<CR>

nmap Q <nop>
